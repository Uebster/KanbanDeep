{
  "name": "kanbandeep",
  "version": "1.0.1",
  "description": "Um sistema de gerenciamento de projetos e tarefas inspirado no Kanban.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Uebster",
  "license": "MIT",
  "dependencies": {
    "electron-log": "^5.1.5",
    "electron-updater": "^6.2.1"
  },
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.uebster.kanbandeep",
    "productName": "KanbanDeep",
    "copyright": "Copyright Â© 2024 ${author}",
    "directories": {
      "output": "release-builds"
    },
    "files": [
      "**/*",
      "!**/node_modules/*",
      "!release-builds/",
      "!tools/"
    ],
    "win": {
      "icon": "assets/kanban-deep-logo.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/kanban-deep-logo.png"
    },
    "linux": {
      "icon": "assets/kanban-deep-logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "README.md",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "Uebster",
      "repo": "KanbanDeep"
    }
  }
}
